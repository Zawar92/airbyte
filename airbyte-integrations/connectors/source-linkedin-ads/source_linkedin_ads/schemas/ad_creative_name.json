{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "com.linkedin.ads.SponsoredUpdateCreativeVariables": {
      "type": "object",
      "properties": {
        "activity": {
          "type": "string"
        },
        "callToActionEnabled": {
          "type": "boolean"
        },
        "sponsoredStatusUpdateContentType": {
          "type": "string"
        },
        "share": {
          "type": "string"
        },
        "share~": {
          "type": "object",
          "properties": {
            "text": {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                }
              },
              "required": ["text"]
            },
            "content": {
              "type": "object",
              "properties": {
                "contentEntities": {
                  "type": "array",
                  "items": [
                    {
                      "type": "object",
                      "properties": {
                        "entityLocation": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        }
                      },
                      "required": ["entityLocation", "title"]
                    }
                  ]
                }
              },
              "required": ["contentEntities"]
            }
          },
          "required": ["text", "content"]
        },
        "directSponsoredContent": {
          "type": "boolean"
        }
      },
      "required": [
        "activity",
        "callToActionEnabled",
        "sponsoredStatusUpdateContentType",
        "share",
        "share~",
        "directSponsoredContent"
      ]
    },
    "id": {
      "type": "integer"
    }
  },
  "required": ["com.linkedin.ads.SponsoredUpdateCreativeVariables", "id"]
}
